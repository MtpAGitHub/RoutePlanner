<Window x:Name="wdwLoader" x:Class="Loader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Title="Station Loader" Height="360" Width="481">
    <Grid>
        <ListBox x:Name="lboxStationList" ItemsSource="{Binding Path=dispStationList}" HorizontalAlignment="Left" Height="168" Margin="46,41,0,0" VerticalAlignment="Top" Width="399"/>
        <Label x:Name="lblStationList" Content="Station List" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.605,-0.077"/>
        <TextBox x:Name="txtbLoadStatus" HorizontalAlignment="Left" Height="23" Margin="46,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="399"/>
        <Label x:Name="lblLoadStatus" Content="Load Status" HorizontalAlignment="Left" Margin="15,214,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnFileSelect" IsDefault="True" Content="File" HorizontalAlignment="Left" Margin="370,298,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
