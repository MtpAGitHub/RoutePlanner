<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style x:Key="isBtnEnabled" TargetType="Button">
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=isBtnEnabled}" Value="True">
                    <Setter Property="IsEnabled" Value="True"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Label x:Name="lblMainTitle" Content="Route Planner" HorizontalAlignment="Left" Margin="200,26,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnLoader" Content="Load Stations" HorizontalAlignment="Left" Margin="85,143,0,0" VerticalAlignment="Top" Width="86"/>
        <Button x:Name="btnMapBuild" Content="Create Map" HorizontalAlignment="Left" Margin="338,143,0,0" VerticalAlignment="Top" Width="86" Style="{StaticResource isBtnEnabled}"/>
        <Button x:Name="btnViewStations" Content="View Stations" HorizontalAlignment="Left" Margin="147,262,0,0" VerticalAlignment="Top" Width="207"/>

    </Grid>
</Window>
